---
const response = await fetch("https://fakestoreapi.com/products");
const products = await response.json();
---

<section class="grid grid-cols-[repeat(auto-fit,minmax(250px,1fr))] gap-8 p-8">
  {products.map((e) => 
  <div class="flex flex-col gap-4 bg-white/40 justify-between rounded-xl p-4 cursor-pointer transition-all hover:scale-105 hover:bg-white/75"> 
      <img src={e.image} class="w-full h-40 object-contain" alt="product" />
      <p class="text-sm">
        {e.title}
      </p>
    <div class="flex justify-between">
      <span class="bg-neutral-200 font-bold rounded-lg p-2 w-fit">
        {e.price} $
      </span>
      <span class="bg-purple-200 font-bold rounded-lg p-2 w-fit cursor-pointer hover:bg-purple-300 hover:scale-110 transition-all">
        <img 
          src="https://img.icons8.com/?size=100&id=60953&format=png&color=000000" 
          alt="add product icon" 
          class="w-8 object-contain"
        >
      </span>
    </div>
    </div>)
  }
</section>
